<app-interaction lang=`${input.html.lang}` dir=`${input.html.dir}` title=`${input.title}`>
  You have ${input.count} new messages!

  <if(input.colors && input.colors.length)>
    <ul>
      <for|color| of=input.colors>
        <li style={ color }>${color}</li>
      </for>
    </ul>
  </if>
  <else>
    <div>No colors!</div>
  </else>
</app-interaction>
